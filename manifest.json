{
  "manifest_version": 3,

  "name": "Kolo",
  "description": "Kolo Chrome extension.",
  "version": "0.1",

  "permissions": [
    "webNavigation",
    "geolocation",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions":[
    "http://api.kolo.it/*",
    "http://kolo.it/*"
  ],
  "options_page" :"options.html",
  "content_scripts": [ {
      "all_frames": true,
      "js": [ "js/kolo_content.js", "js/lib/widget.js"],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
   } ],
  "icons": {
    "16": "icons/icon-big.png",
    "48": "icons/icon-small-35.png",
    "128": "icons/icon-small-100.png" },
  "background": {
    "service_worker": "js/kolo.js",
    "type": "module"
  },
  "action": {
    "default_icon": {                // optional
      "16": "icons/icon-big.png",
      "48": "icons/icon-small-35.png",
      "128": "icons/icon-small-100.png"
    },
    "default_title": "Kolo",  // optional, shown in tooltip
    "default_popup": "popup.html"    // optional
  }
}